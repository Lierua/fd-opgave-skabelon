---
import Layout from "@layouts/Layout.astro";
import HeroBgWrapper from "@components/helpers/HeroBgWrapper.astro";
import Vision from "@components/aboutComp/Vision.astro";
import ValuesPrinciples from "@components/ValuesPrinciples.astro";
import Frames from "@components/utilityComp/Frames.astro";
import AccordionContainer from "@components/utilityComp/AccordionContainer.astro";
import faqData from "@data/faq.json";
---

<Layout>
  <HeroBgWrapper class="full-bleed reuseHero" imagePath="aboutHero.jpg">
    <header>
      <p>About</p>
      <h1>Creative Services For Boost Your Business Growth</h1>
    </header>
  </HeroBgWrapper>
  <Vision />
  <ValuesPrinciples data="Light" linkTheme="black"/>
  <Frames present="no" number="3" overTitle="Our team" title="We champion the bold to achieve the extraordinary" subtitle="Our success stems from the synergy between dedicated teams and our valued clients. We prioritize a company culture that fosters exceptional productivity, ensures customer satisfaction, and promotes mutual respect among all team members."/>
  <AccordionContainer data={faqData.faq} exclusive={true} />
</Layout>

