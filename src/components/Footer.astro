---
import { Image } from "astro:assets";
import Pattern from "@assets/images/Pattern2.png";
---

<div class="news content-padding">
    <div class="content">
        <Image class="img" src={Pattern} alt="pattern" />
        <div>
            <h2>Subscribe Our Newsletter</h2>
            <p>Build stronger Customer Relationships with Consultalk</p>
        </div>
        <input type="email" placeholder="Your mail address" class="mail-input">
        <button>Subscribe</button>
    </div>
</div>
<div class="footer">
    <div class="content content-padding">
        <h3>AskExperts</h3>
        <p>Â©2025 Consultalk. All rights reserved | Terms of Service | Privacy Policy</p>
    </div>
</div>


<style>
.news {
    margin-bottom: var(--margin-space);
    .content {
        height: 252px;
        background-color: var(--black);
        border-radius: var(--border-radius);
        position: relative;
        overflow: hidden;
        display: flex;
        gap: 1rem;
        justify-content: center;
        > * {
            height: fit-content;
            align-self: center;
        }
        div:has(h2) {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }
        h2,p {
            color: var(--white);
            text-box-trim: trim-both;
        }
    &::after {
        rotate: -45deg;
        bottom: -180px;
        right: -82px;
        content: "";
        position: absolute;
        height: 285px;
        width: 225px;
        border-radius: var(--border-radius);
        background-color: var(--green);
    }
    img {
        rotate: -45deg;
        position: absolute;
        right: -130px;
        top: -173px;
    }
        button{
        font-weight: 600;
        color: var(--gray);
        transition: background-color 0.2s ease-in;
        padding: 15px 45px;
        border-radius: 100px;
        background-color: var(--yellow);
        z-index: 1;
    }
    button:hover {
        background-color: var(--white);
    }
    .mail-input {
        margin-left: 6rem;
        width: 311px;
        height: 68px;
        max-width: 320px;
        padding: 0 25px;
        border: 1px solid #ddd;
        border-radius: 4px;
        background-color: white;
        font-size: 16px;
        color: #333;

        transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

        .mail-input::placeholder {
        color: rgb(178, 178, 178);
        }

        .mail-input:focus {
        outline: none;
        border-color: #bbb;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.05);
        }
    }
}
.footer {
    height: 220px;
    background-color: var(--black);
    .content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        height: 100%;
        justify-content: center;
    > * {

        text-align: center;
        color: var(--white);
        padding: 1rem;
    }
    h3 {
        border-bottom: 1px solid var(--white);
    }
    }
}
</style>