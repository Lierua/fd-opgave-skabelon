---
import AccordionItem from "./AccordionItem.astro";

const { data, exclusive } = Astro.props;
---

<section class="accordion-container">
  <div class="title">
    <p>FAQ</p>
    <h1>Customer Questions</h1>
  </div>
  <div>
    {data.map((item) => (
      <AccordionItem {...item} exclusive={exclusive} />
    ))}
  </div>
</section>

<style>
  .accordion-container {
    border-radius: var(--border-radius);
    margin-bottom: var(--margin-space);
    padding-block: 8rem;
  }
  .title {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
    align-items: center;
    text-align: center;
    h1 {
      font-size: var(--step-5);
    }
    p {
      font-size: 1.2rem;
    }
  }
  section {
    padding-block: 3rem;
    background: #f5f5f5;
  }
  div {
    padding: 1rlh;
    max-width: 725px;
    margin-inline: auto;
  }
</style>